{
  "$schema": "../../packages/build/gamecp-manifest.schema.json",
  "extension_id": "game-scheduler",
  "version": "1.2.6",
  "name": "Scheduler",
  "description": "Schedule automated server starts, stops, and restarts",
  "author": "GameCP Team",
  "ui_bundle": "dist/index.js",
  "handlers_bundle": "dist/handlers.js",
  "integrity": "sha384-gn0wajbM8JmUjZxBhSA/HzbC7jBnoUhcqdhj9ULj0ecqnyduo4fognoSWnYSRleh",
  "ui_injection": [
    {
      "method": "MOUNT",
      "target": "server.sidebar.nav",
      "component": "ScheduleIcon",
      "order": 60
    },
    {
      "method": "HANDLER",
      "target": "server.page.extensions",
      "component": "SchedulerPage",
      "route_path": "/game-servers/:id/extensions/scheduler"
    }
  ],
  "internal_logic": {
    "api_routes": [
      {
        "method": "GET",
        "path": "/tasks",
        "handler_export": "getTasks",
        "description": "Get all scheduled tasks for a server"
      },
      {
        "method": "POST",
        "path": "/tasks",
        "handler_export": "createTask",
        "timeout_ms": 3000,
        "description": "Create a new scheduled task"
      },
      {
        "method": "DELETE",
        "path": "/tasks",
        "handler_export": "deleteTask",
        "description": "Delete a scheduled task"
      }
    ],
    "event_listeners": [
      {
        "event": "cron.tick",
        "handler_export": "processScheduledTasks",
        "async": true,
        "description": "Process and execute scheduled tasks"
      },
      {
        "event": "server.lifecycle.deleted",
        "handler_export": "onServerDeleted",
        "async": true,
        "description": "Clean up scheduled tasks when a game server is deleted"
      }
    ]
  },
  "sandbox_config": {
    "db_collections": [
      "schedules",
      "task_logs"
    ],
    "permissions": [
      "server.power.manage",
      "server.console.write",
      "server.files.write"
    ],
    "resource_limits": {
      "memory_mb": 128,
      "timeout_ms": 60000,
      "max_db_queries_per_request": 20
    }
  },
  "metadata": {
    "icon": "assets/icon.png",
    "readme": "README.md",
    "category": "automation",
    "homepage": "https://github.com/GameCP/apps/blob/main/game-scheduler/README.md",
    "repository": "https://github.com/GameCP/apps/tree/main/game-scheduler",
    "license": "MIT",
    "tags": [
      "scheduler",
      "automation",
      "cron",
      "restart",
      "wipe",
      "tasks"
    ],
    "screenshots": [
      "assets/screenshots/1.png"
    ]
  }
}
