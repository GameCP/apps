{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["extension_id", "version", "name", "author", "entry_point"],
  "properties": {
    "extension_id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "entry_point": {
      "type": "string"
    },
    "integrity": {
      "type": "string",
      "pattern": "^sha384-"
    }
  }
}
