{
  "$schema": "../../packages/build/gamecp-manifest.schema.json",
  "extension_id": "server-notes",
  "version": "1.0.16",
  "name": "Admin Notes",
  "description": "Add private admin notes to game servers for internal documentation and team communication",
  "author": "GameCP Team",
  "ui_bundle": "dist/index.js",
  "handlers_bundle": "dist/handlers.js",
  "integrity": "sha384-NvSYLNRe7w8enYplEWc6+LfTGxH70Cl/VB8JSWp3IjO/E77RpAVR/NEd3eJ4QfSI",
  "ui_injection": [
    {
      "method": "MOUNT",
      "target": "server.dashboard.widget",
      "component": "NotesArea",
      "col_span": 3,
      "order": 1
    }
  ],
  "internal_logic": {
    "api_routes": [
      {
        "path": "/notes",
        "method": "POST",
        "handler_export": "saveNote"
      },
      {
        "path": "/notes",
        "method": "GET",
        "handler_export": "getNote"
      }
    ]
  },
  "sandbox_config": {
    "db_collections": [],
    "permissions": []
  },
  "metadata": {
    "icon": "assets/icon.png",
    "readme": "README.md",
    "category": "utilities",
    "homepage": "https://github.com/GameCP/apps/blob/main/server-notes/README.md",
    "repository": "https://github.com/GameCP/apps/tree/main/server-notes",
    "license": "MIT",
    "tags": [
      "notes",
      "documentation",
      "admin",
      "team"
    ],
    "screenshots": [
      "assets/screenshots/notes-widget.png"
    ]
  }
}
