{
  "$schema": "../../packages/build/gamecp-manifest.schema.json",
  "extension_id": "server-notes",
  "version": "1.0.7",
  "name": "Admin Notes",
  "description": "Add private admin notes to game servers for internal documentation and team communication",
  "author": "GameCP Team",
  "ui_bundle": "dist/index.js",
  "handlers_bundle": "dist/handlers.js",
  "integrity": "sha384-s5g/3HX53WXLFjEZjZ3taDWajOpBPo0zvWX7zEyoR6tcy3V0brwj8uRdCK4bxzoa",
  "ui_injection": [
    {
      "method": "MOUNT",
      "target": "server.dashboard.widget",
      "component": "NotesArea",
      "col_span": 3
    }
  ],
  "internal_logic": {
    "api_routes": [
      {
        "path": "/notes",
        "method": "POST",
        "handler_export": "saveNote"
      },
      {
        "path": "/notes",
        "method": "GET",
        "handler_export": "getNote"
      }
    ]
  },
  "sandbox_config": {
    "db_collections": [
      "notes"
    ],
    "permissions": [
      "server.read",
      "server.write"
    ]
  },
  "metadata": {
    "icon": "assets/icon.png",
    "readme": "README.md",
    "category": "utilities",
    "homepage": "https://github.com/GameCP/apps/tree/main/server-notes",
    "repository": "https://github.com/GameCP/apps/tree/main/server-notes",
    "license": "MIT",
    "tags": [
      "notes",
      "documentation",
      "admin",
      "team"
    ],
    "screenshots": [
      "assets/screenshots/1.png"
    ]
  }
}
